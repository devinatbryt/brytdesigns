{
  "include": [
    "../ajax-cart-api/src"
  ],
  "exclude": [
    "../ajax-cart-api/dist",
    "../ajax-cart-api/node_modules",
    "../ajax-cart-api/.turbo"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "noEmit": true,
    "lib": [
      "es2022",
      "DOM"
    ]
  }
}
